<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/active_background"
    tools:context="com.nagy.mohamed.ardelkonouz.ui.ActiveScreen.ActiveScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.nagy.mohamed.ardelkonouz.ui.ActiveScreen.ActiveScreen">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="248dp"
            android:layout_height="188dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92dp"
            android:src="@drawable/main_image"
            android:scaleType="centerCrop"/>

        <EditText
            android:id="@+id/active_screen_edit_text"
            android:layout_below="@id/main_image"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/active_edit_background"
            android:hint="Enter Active Code"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/active_screen_edit_text"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/active_screen_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="active"
                android:layout_marginEnd="16dp"
                android:background="@drawable/active_button_background"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/new_active_screen_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="new"
                android:background="@drawable/active_button_background"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>