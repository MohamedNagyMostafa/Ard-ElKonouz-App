<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:translationZ="3dp"
    android:backgroundTint="@android:color/white"
    android:background="@drawable/recycle_background">

    <RelativeLayout
        android:layout_width="92dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/course_pf_section_edit_image_View"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_mode_edit_black_36dp"/>

        <ImageView
            android:id="@+id/course_pf_section_delete_image_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_black_18dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/course_pf_section_body_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_pf_section_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:text="Section "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:text="Instructor"/>

        <TextView
            android:id="@+id/course_pf_section_instructor_name_text_view"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp"
            android:text="@string/empty_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Next Section"/>

        <TextView
            android:id="@+id/course_pf_next_section_text_view"
            android:layout_width="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/empty_info"/>

    </LinearLayout>

</LinearLayout>