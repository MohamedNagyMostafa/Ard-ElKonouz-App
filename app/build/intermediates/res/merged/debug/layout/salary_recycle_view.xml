<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/image_pf"
        android:id="@+id/instructor_image"
        android:layout_width="82dp"
        android:tint="@color/colorPrimaryDark"
        android:layout_gravity="center_vertical"
        android:layout_height="82dp"
        android:src="@drawable/user_profile_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginEnd="44dp">

            <TextView
                android:id="@+id/salary_list_instructor_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_info"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_margin="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:text="Paid Courses Number"
                    android:textColor="@color/colorPrimaryDark" />


                <TextView
                    android:id="@+id/salary_list_paid_courses_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp"
                    android:text="@string/empty_info"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="serif"
                    android:text="Unpaid Courses Number"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/salary_list_unpaid_courses_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp"
                    android:text="@string/empty_info"/>

            </LinearLayout>


        </LinearLayout>

</LinearLayout>