<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    android:backgroundTintMode="multiply"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/course"/>

    <TextView
        android:id="@+id/child_pf_course_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/instructor"/>

    <TextView
        android:id="@+id/child_pf_instructor_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:layout_marginStart="8dp"
        android:text="@string/start_date"/>

    <TextView
        android:id="@+id/child_pf_course_start_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:text="@string/end_date"/>

    <TextView
        android:id="@+id/child_pf_course_end_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="@string/empty_info"/>

</LinearLayout>