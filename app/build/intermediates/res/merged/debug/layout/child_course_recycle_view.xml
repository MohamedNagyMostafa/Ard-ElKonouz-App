<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/course_image"
        android:contentDescription="@string/image_pf"
        android:tint="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/user_profile_icon"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="44dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/child_course_list_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_info"
                    android:layout_marginTop="8dp"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/child_course_list_section_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_info"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginEnd="6dp"
                    android:text="Cost"/>

                <TextView
                    android:id="@+id/child_course_list_cost_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/black"
                    android:text="@string/empty_info"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="6dp"
                android:text="Days"/>



            <TextView
                android:id="@+id/child_course_list_days_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:text="@string/empty_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="6dp"
                android:text="@string/start_date"/>


            <TextView
                android:id="@+id/child_course_list_start_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:text="@string/empty_info"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginEnd="6dp"
                    android:text="@string/end_date"/>


                <TextView
                    android:id="@+id/child_course_list_end_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/empty_info"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/child_course_list_select__image_view"
            android:contentDescription="@string/image_dt"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_done_black_18dp"/>

    </RelativeLayout>

</LinearLayout>