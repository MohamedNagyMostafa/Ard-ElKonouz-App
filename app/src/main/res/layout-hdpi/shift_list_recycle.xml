<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp">


    <ImageView
        android:id="@+id/course_image"
        android:contentDescription="@string/image_pf"
        android:layout_width="112dp"
        android:layout_gravity="center_vertical"
        android:tint="@color/colorPrimaryDark"
        android:layout_height="82dp"
        android:src="@drawable/user_profile_icon"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shift_list_course_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_info"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructor"
            android:textSize="26sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="serif"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/shift_list_instructor_name_text_view"
            android:layout_width="wrap_content"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/empty_info"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Session Day"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="serif"
            android:textSize="26sp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/shift_list_next_session"
            android:layout_width="wrap_content"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:text="@string/empty_info"/>


    </LinearLayout>


</LinearLayout>