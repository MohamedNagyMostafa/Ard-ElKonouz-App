<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:translationZ="3dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="@android:color/white"
    android:background="@drawable/recycle_background">

    <TextView
        android:id="@+id/child_pf_course_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:text="@string/instructor"/>

    <TextView
        android:id="@+id/child_pf_instructor_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="serif"
        android:layout_marginStart="8dp"
        android:text="@string/start_date"/>

    <TextView
        android:id="@+id/child_pf_course_start_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="serif"
        android:text="@string/end_date"/>

    <TextView
        android:id="@+id/child_pf_course_end_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="@string/empty_info"/>

</LinearLayout>