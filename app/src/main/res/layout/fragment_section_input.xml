<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.nagy.mohamed.ardelkonouz.ui.InputScreens.SectionInputActivityFragment"
    tools:showIn="@layout/activity_section_input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginTop="8dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/user_profile_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section Info"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/section_input_name_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:hint="Section No."
                            android:layout_marginTop="8dp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_marginStart="4dp"
                            android:inputType="textPersonName"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/section_input_sessions_hours_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:hint="Session Hours"
                            android:layout_marginTop="8dp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorAccent"
                            android:layout_marginStart="4dp"
                            android:inputType="numberDecimal|numberSigned"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section Date"
                android:layout_marginStart="16dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:text="@string/start_date"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/section_input_start_date_edit_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:backgroundTint="@color/colorAccent"
                        android:inputType="datetime"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_av_timer_black_18dp"/>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:text="Sessions Days"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="4dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:id="@+id/section_input_sat_day_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:src="@drawable/ic_done_black_18dp"
                                android:tint="@android:color/holo_green_dark"/>

                            <TextView
                                android:id="@+id/section_input_sat_day_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/colorPrimary"
                                android:text="SAT" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/section_input_sun_day_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_done_black_18dp"
                                android:visibility="invisible"
                                android:tint="@android:color/holo_green_dark"/>


                            <TextView
                                android:id="@+id/section_input_sun_day_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="SUN"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="4dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/section_input_mon_day_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:src="@drawable/ic_done_black_18dp"
                                android:tint="@android:color/holo_green_dark"/>

                            <TextView
                                android:id="@+id/section_input_mon_day_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/colorPrimary"
                                android:text="MON"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/section_input_tue_day_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:src="@drawable/ic_done_black_18dp"
                                android:tint="@android:color/holo_green_dark"/>

                            <TextView
                                android:id="@+id/section_input_tue_day_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/colorPrimary"
                                android:text="TUE"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:id="@+id/section_input_wed_day_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:src="@drawable/ic_done_black_18dp"
                                android:tint="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/section_input_wed_day_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/colorPrimary"
                                android:text="WED" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/section_input_thu_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_done_black_18dp"
                                android:visibility="invisible"
                                android:tint="@color/colorPrimaryDark"/>


                            <TextView
                                android:id="@+id/section_input_thu_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="THU"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/section_input_fri_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:src="@drawable/ic_done_black_18dp"
                                android:tint="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/section_input_fri_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/colorPrimary"
                                android:text="FRI"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Number Of Sessions"/>


                <EditText
                    android:id="@+id/section_input_sessions_number_edit_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:backgroundTint="@color/colorAccent"
                    android:inputType="numberDecimal"/>

               

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_detail"
                android:layout_marginStart="16dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical"
                    android:text="Section State"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/section_input_complete_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done_black_18dp"
                        android:visibility="invisible"
                        android:tint="@android:color/holo_green_dark"/>

                    <TextView
                        android:id="@+id/section_input_complete_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/complete"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/section_input_incomplete_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_done_black_18dp"
                        android:tint="@android:color/holo_green_dark"/>

                    <TextView
                        android:id="@+id/section_input_incomplete_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/incomplete" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/section_input_submit_application_button"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="16dp"/>

    </LinearLayout>


</ScrollView>
