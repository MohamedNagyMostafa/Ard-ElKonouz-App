<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginEnd="8dp"
    android:translationZ="3dp"
    android:backgroundTint="@android:color/white"
    android:background="@drawable/recycle_background">

    <RelativeLayout
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/section_pf_shift_delete_image_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/black"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_black_18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:text="Shift"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:text="@string/start_date"/>

    <TextView
        android:id="@+id/section_pf_shift_start_date_text_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:text="@string/empty_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/end_date"/>

    <TextView
        android:id="@+id/section_pf_shift_end_date_text_view"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="@string/empty_info"/>


</LinearLayout>