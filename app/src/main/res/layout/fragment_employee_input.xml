<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.InputScreens.EmployeeInputFragment"
    tools:showIn="@layout/activity_employee_input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:contentDescription="@string/image_pf"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:src="@drawable/user_profile_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_info"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/employee_input_name_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:hint="Name"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:layout_marginStart="4dp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/employee_input_age_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:hint="Age"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:layout_marginStart="4dp"
                            android:inputType="numberSigned"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/employee_input_mobile_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:hint="Mobile"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:layout_marginStart="4dp"
                            android:inputType="phone"/>

                        <EditText
                            android:id="@+id/employee_input_address_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:hint="Address"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:layout_marginStart="4dp"
                            android:inputType="text"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical"
                    android:text="@string/gender"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/employee_input_male_gender_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:src="@drawable/ic_done_black_18dp"
                        android:tint="@android:color/holo_green_dark"/>

                    <TextView
                        android:id="@+id/employee_input_male_gender_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/gender_male"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:id="@+id/employee_input_female_gender_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_done_black_18dp"
                        android:tint="@android:color/holo_green_dark"/>

                    <TextView
                        android:id="@+id/employee_input_female_gender_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/gender_female"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_info"
                android:layout_marginStart="16dp"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#039be5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/total_salary"/>

            <EditText
                android:id="@+id/employee_input_original_salary_edit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:inputType="numberDecimal"/>


        </LinearLayout>


        <Button
            android:id="@+id/employee_input_submit_application_button"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_margin="16dp"/>

    </LinearLayout>

</ScrollView>